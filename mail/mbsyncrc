#################################
######## Account mailbox ########
#################################

IMAPAccount ebi
Host incoming.ebi.ac.uk
User mbhall88
PassCmd "op get item bssrpkn77fhuniqfjgg5priunu --fields password"
SSLType IMAPS
SSLVersions TLSv1.2
CertificateFile ~/.dotfiles/mail/ebi-certificates.crt

# Remote storage
IMAPStore ebi-remote
Account ebi

# Local storage
MaildirStore ebi-local
Path ~/Mail/ebi/
Inbox ~/Mail/ebi/INBOX

Channel ebi-inbox
Master :ebi-remote:"Inbox"
Slave :ebi-local:INBOX
Create Both
Expunge Both

Channel ebi-archive
Master :ebi-remote:"Archive"
Slave :ebi-local:Archive
Create Both
Expunge Both

Channel ebi-drafts
Master :ebi-remote:"Drafts"
Slave :ebi-local:Drafts
Create Both
Expunge Both

Channel ebi-sent
Master :ebi-remote:"Sent"
Slave :ebi-local:Sent
Create Both
Expunge Both

Channel ebi-trash
Master :ebi-remote:"Trash"
Slave :ebi-local:trash
Create Both
Expunge Both

Channel ebi-junk
Master :ebi-remote:"Junk"
Slave :ebi-local:junk
Create Both
Expunge Both

Group ebi
Channel ebi-inbox
Channel ebi-archive
Channel ebi-drafts
Channel ebi-sent
Channel ebi-trash
Channel ebi-junk

